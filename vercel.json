{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/admin/statistics",
      "dest": "server.js",
      "methods": ["GET"],
      "headers": {
        "Access-Control-Allow-Origin": "https://skblossom.vercel.app",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Authorization",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    {
      "src": "/admin/dashboard/charts",
      "dest": "server.js",
      "methods": ["GET"],
      "headers": {
        "Access-Control-Allow-Origin": "https://skblossom.vercel.app",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Authorization",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    {
      "src": "/auth/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/admin/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/admin/setup",
      "dest": "public/admin/setup.html"
    },
    {
      "src": "/admin/login",
      "dest": "public/admin/login.html"
    },
    {
      "src": "/admin/dashboard",
      "dest": "public/admin/dashboard.html"
    },
    {
      "src": "/admin/js/(.*)",
      "dest": "public/admin/js/$1"
    },
    {
      "src": "/admin/css/(.*)",
      "dest": "public/admin/css/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}