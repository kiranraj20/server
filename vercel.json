{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/admin/setup/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/products/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/orders/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/categories/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/users/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/reviews/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/offers/(.*)",
      "dest": "server.js"
    },

    
    {
      "src": "/admin/setup/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "server.js"
    },
    {
      "src": "(.*)/products/(.*)",
      "dest": "server.js"
    },
    {
      "src": "(.*)/orders/(.*)",
      "dest": "server.js"
    },
    {
      "src": "(.*)/categories/(.*)",
      "dest": "server.js"
    },
    {
      "src": "(.*)/users/(.*)",
      "dest": "server.js"
    },
    {
      "src": "(.*)/reviews/(.*)",
      "dest": "server.js"
    },
    {
      "src": "(.*)/offers/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/js/firebase-config.js",
      "dest": "public/admin/js/firebase-config.js"
    },


    {
      "src": "/admin/setup",
      "dest": "public/admin/setup.html"
    },
    {
      "src": "/admin/login",
      "dest": "public/admin/login.html"
    },
    {
      "src": "/admin/dashboard",
      "dest": "public/admin/dashboard.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "public/admin/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://skblossom.vercel.app, http://localhost:5000",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Authorization",
        "Access-Control-Allow-Credentials": "true",
        "Access-Control-Max-Age": "86400"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}