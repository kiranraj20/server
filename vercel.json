{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/admin/setup/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/products/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/orders/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/categories/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/users/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/reviews/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/offers/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/admin/setup",
      "dest": "public/admin/setup.html"
    },
    {
      "src": "/admin/login",
      "dest": "public/admin/login.html"
    },
    {
      "src": "/admin/dashboard",
      "dest": "public/admin/dashboard.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "public/admin/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}